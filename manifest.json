{
	"manifest_version": 3,
	"name": "AI Assist",
	"description": "AI assist - to help you get the context of the page",
	"version": "1.0",
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"action": {
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"128": "images/icon-128.png"
		},
		"default_popup": "index.html"
	},
	"host_permissions": [
		"http://localhost:8080/*"
	],
	"background": {
		"service_worker": "scripts/background.js"
	},
	"permissions": [
		"tabs",
		"scripting"
	]
}
